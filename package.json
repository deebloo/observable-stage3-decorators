{
  "name": "node-starter",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "wireit",
    "tsc": "wireit"
  },
  "wireit": {
    "start": {
      "command": "node target/main.js",
      "dependencies": [
        "tsc"
      ]
    },
    "tsc": {
      "command": "tsc --build --pretty",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "target/**",
        ".tsbuildinfo"
      ]
    }
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "typescript": "^5.0.4",
    "wireit": "^0.9.5"
  }
}
